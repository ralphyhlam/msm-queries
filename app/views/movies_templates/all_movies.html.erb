<h1>List of all movies</h1>
<hr>

<table border="1" >
  <tr>
    <th>
      ID
    </th>
    <th>
      Image
    </th>
    <th>
      Title
    </th>
    <th>
      Year
    </th>
    <th>
      Director
    </th>
    <th>
    </th>
  </tr>

  <% Movie.all.each do |movie| %>
    <tr>
      <th>
        <%= movie.id %>
      </th>
      <th>
        <img src= <%= movie.image %> >
      </th>
      <th>
        <%= movie.title %>
      </th>
      <th>
        <%= movie.year %>
      </th>
      <th>
        <% film_director = Director.where({ :id => movie.director_id }).at(0)%>
        <%= film_director.name %>
      </th>
      <th>
        <a href="/movies/<%=movie.id %>">Show details</a>
    </tr>
  <%end%>
</table>
