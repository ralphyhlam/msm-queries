<h1>Actor #<%= @actor_choice %> details</h1>

<a href="/actors">Go back</a>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @actor_details.name%>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @actor_details.dob%>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @actor_details.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src= <%= @actor_details.image %>>
  </dd>

  <dt>
    Created at 
  </dt>
  <dd>
    <%= @actor_details.created_at %>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= @actor_details.updated_at %>
  </dd>
</dl>

<hr>

<table border="1">
  <tr>
    <th>
      Title
    </th>
    <th>
      Year
    </th>
    <th>
      Director
    </th>
    <th>
      Character name
    </th>
    <th>
    </th>
  </tr>

  <% @past_characters.each do |character| %>
    <tr>
      <th>
        <%past_roles = character.movie_id %>
        <% casting_history = Movie.where({:id => past_roles}).at(0)%>
        <%= casting_history.title %>
      </th>
      <th>
        <%= casting_history.year %>
      </th>
      <th>
        <% director_id = casting_history.director_id %>
        <% director_find = Director.where({:id => director_id}).at(0)%>
        <%= director_find.name %>

      </th>
      <th>
        <%= character.name %>
      </th>
      <th>
        <a href="/movies/<%=character.movie_id%>">Show details</a>
      </th>
    </tr>
  <%end%>
</table>
