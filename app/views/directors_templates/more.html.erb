<h1>Director #<%= @director_choice %> details</h1>

<a href="/directors">Go back</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @details.name%>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @details.dob%>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @details.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src= <%= @details.image %>>
  </dd>

  <dt>
    Created at 
  </dt>
  <dd>
    <%= @details.created_at %>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= @details.updated_at %>
  </dd>
</dl>

<hr>

<h1>Filmography</h1>

<table border="1">
<tr>
    <th>
      ID
    </th>
    <th>
      Image
    </th>
    <th>
      Title
    </th>
    <th>
      Year
    </th>
    <th>
      Director
    </th>
    <th>
    </th>
  </tr>

  <% @filmography.each do |movie| %>
    <tr>
      <th>
        <%= movie.id %>
      </th>
      <th>
        <img src= <%= movie.image %> >
      </th>
      <th>
        <%= movie.title %>
      </th>
      <th>
        <%= movie.year %>
      </th>
      <th>
        <%= @details.name %>
      </th>
      <th>
        <a href="/movies/<%=movie.id %>">Show details</a>
    </tr>
  <%end%>
</table>
